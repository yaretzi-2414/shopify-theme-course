{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="header-container">
    <h1>
        <img src="{{ 'hero-image.svg' | asset_url }}" loading="lazy"  />
        <span>vintage & thrift</span>
    </h1>
</div>

<div>
    {% for block in section.blocks %}
        <a href="">
            <div></div>
            <div></div>
            <h3>{{ block.settings.collection.title | downcase }}</h3>
        </a>
    {% endfor %}
</div>


{% schema %}
{
    "name": "Hero",
    "blocks":[
        {
            "type": "collection",
            "limit": 3,
            "name": "Collection",
            "settings":[
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                },
                {
                    "type": "image_picker",
                    "id": "image_bg",
                    "label": "Image Background"
                },
                {
                    "type": "image_picker",
                    "id": "image_hover",
                    "label": "Image Hover"
                }
            ]
        }
    ],
    "presets": 
    [
        {
        "name":"Hero"
        }
    ]
}
{% endschema %}